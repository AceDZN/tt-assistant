            "title": "Image Search"
        },
        "activity_type": {
            "const": "Cloze",
            "title": "Activity Type"
        },
        "instructions": {
            "description": "Select the missing word",
            "maxLength": 200,
            "title": "Instructions",
            "type": "string"
        },
        "sentence": {
            "description": "a statement about the subject (includes the missing word in it)",
